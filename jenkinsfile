pipeline {
    agent any 
    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out the code...'
                checkout scm // Use checkout scm for proper SCM handling
            }
        }
        stage('Build') {
            steps {
                echo 'Building the project...'
                bat 'npm install' // Replace with your actual build command
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests...'
                bat 'npx testcafe chrome C:\Users\ridsharm\OneDrive - Capgemini\Desktop\TestCafe\tests\8o3(Parallel Testing).js' // Replace with your actual test command
            }
        }
    }
    post {
        success {
            echo 'Build and tests were successful!'
        }
        failure {
            echo 'Build failed. Check the logs for more information.'
        }
    }
}
